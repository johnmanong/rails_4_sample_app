<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: 'Compost new micropost...', maxlength: "140" %>
    <div class="char-remaining">140 characters remaining</div>
  </div>
  <%= f.submit 'Post', class: 'btn btn-large btn-primary' %>

<% end %>