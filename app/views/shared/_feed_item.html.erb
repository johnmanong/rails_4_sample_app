<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="content"><%= feed_item.content %></span>
  <%= render partial: 'shared/inline_timestamp', locals: { post: feed_item } %>
  <%= render partial: 'shared/delete_micropost_link', locals: { post: feed_item } %>
</li>